{
  "manifest_version": 2,

  "name": "Printcamp",
  "description": "Enable pretty printing of Basecamp 3 documents.",
  "version": "0.1.0",

  "permissions": [
    "activeTab"
  ],

  "content_scripts": [
    {
      "matches": ["https://3.basecamp.com/*"],
      "css": ["printcamp.css"]
    }
  ]
}
